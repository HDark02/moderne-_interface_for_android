MDScreen:
    name: "sign page"
	user_password:user_password
	user_password1:user_password1
	MDFloatLayout:
    	md_bg_color: "white"
		MDTopAppBar:
    		title: "Create Account"
			theme_text_color: "Custom"
			title_text_color: "white"
			md_bg_color: 0, 0, 1, 1
			right_action_items: [["close", lambda x: app.back()]]
			pos_hint: {"center_x": .5, "top": 1}
		Input_cart:
	    	hint_text: "Name"
	    	pos_hint: {"center_x": .5, "top": .88}
		Input_cart:
	    	hint_text: "Email"
	    	pos_hint: {"center_x": .5, "center_y": .7}
		Input_cart:
    		id: user_password
	    	hint_text: "Pssword"
	    	pos_hint: {"center_x": .5, "center_y": .57}
			password: True
		MDIconButton:
    		id: icon_eye
    		icon: "eye-off"
			halign: "right"
			theme_text_color: "Custom"
			text_color: 0, 0, .4, .9
			pos_hint: {"right": .9, "center_y": .57}
			on_release: user_password.password = not user_password.password
		Input_cart:
    		id: user_password1
	    	hint_text: "Confirm Password"
	    	pos_hint: {"center_x": .5, "center_y": .43}
			password: True
		MDIconButton:
    		id: icon_eye
    		icon: "eye-off"
			halign: "right"
			theme_text_color: "Custom"
			text_color: 0, 0, .4, .9
			pos_hint: {"right": .9, "center_y": .45}
			on_release: user_password1.password = not user_password1.password
		Input_cart:
	    	hint_text: "Mobile Number"
	    	pos_hint: {"center_x": .5, "center_y": .3}
		MDRoundFlatButton:
        	id: submit
			text: "Submit"
			pos_hint: {"center_x": .5, "center_y": .1}
			halign: "center"
			font_size: "20sp"
			bold: True
			size_hint: .8, .07
			theme_text_color: "Custom"
			text_color: "white"
			md_bg_color: 0, 0, .8, .9
			on_release: 
<Input_cart@MDTextField>:
    id: ""
    pos_y: .1
	hint_text: ""
	size_hint: .85, None
	height: self.minimum_height
	padding: 18
	hint_text_color_normal:  "gray"
	hint_text_color_focus: "gray"
	password: False
	theme_text_color: "Custom"
	cursor_color: "black"
	background_color: "white"
	hint_text_color: "gray"
	pos_hint: {"center_x": .5, "center_y": root.pos_y}
	multiline: False
	font_size: "20sp"
	text_color: "black"
	text_color_normal: "gray"
	font_size: "25sp"